{
  "mcpServers": {
    "clojure-mcp": {
      "command": "/bin/sh",
      "args": [
        "-c",
        "cd /home/adam && clojure -Sdeps '{:deps {org.slf4j/slf4j-nop {:mvn/version \"2.0.16\"} com.bhauman/clojure-mcp {:git/url \"https://github.com/bhauman/clojure-mcp.git\" :git/tag \"v0.1.9-alpha\" :git/sha \"e3e0e9b\"}}}' -A:mcp -X clojure-mcp.main/start-mcp-server :port 7888"
      ]
    },
    "postgres": {
      "command": "uv",
      "args": ["run", "postgres-mcp", "--access-mode=unrestricted"],
      "env": {
        "DATABASE_URI": "postgresql://app:app@localhost:5432/cljcollage_dev"
      }
    }
  }
}
